    <div class="container">
      <div class="row">
        <div class="col-md-6 m-auto">
          <h1 calss="text-center display-4 my-4">File uploads (jpg, txt)</h1>
          <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="custom-file mb-3">
              <input
                type="file"
                name="file"
                id="file22"
                class="custom-file-input"
              />
              <label for="file" class="custon-file-label">Choose File</label>
              <input
                type="submit"
                value="Submit"
                class="btn btn-primary btn-block"
              />
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-md-6 m-auto">
          <h1 calss="text-center display-4 my-4">File Read</h1>
          <form action="/submit" method="POST">
            <div class="custom-file mb-3">
              <input
                type="text"
                name="inputValue"
                placeholder="Enter File Id here"
                class="custom-file-input"
              />
              <label for="inputValue" class="custon-file-label"
                >Choose File</label
              >
              <input
                type="submit"
                value="Submit"
                class="btn btn-primary btn-block"
              />
            </div>
          </form>
        </div>
      </div>
    </div>

